<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
{{> nav-block}}

<div class="container">
    <br>
    <br>
    <div class="container wow slideInLeft" data-wow-duration="0.75s" data-wow-delay=".5s">
    <h3 id="shopping-list"><strong>Shopping List</strong></h3>
    <div class="row">
        <div class="col-8">
            {{#each ingredients}}
                {{> shopping-block}}
            {{/each}}
        </div>


        <div class="col-md-4 list-form">
            <h5>Add Items to Your Shopping List</h5>
            <form>
                <div class="form-group">
                    <label for="ingredient">Item:</label>
                    <input type="text" class="form-control" id="ingredient" placeholder="Enter Item Name">
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="text" class="form-control" id="quantity" placeholder="Enter Quantity">
                </div>
                <button class="btn" id="addToShoppingList">Add to Shopping List</button>
            </form>
        </div>
    </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js"></script>
<script>new WOW().init()</script>