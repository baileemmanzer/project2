{{> nav-block}}
<div class="container">
    <br>
    <div class="row">
        <div class="col-6">
                {{!-- <img src="../public/images/fridge.jpg"> --}}
            {{#each ingredients}}
            {{> shopping-list-block}}
            {{/each}}
        </div>
        <div class="col-6">
            <h2>Add Items</h2>
            <form>
                <div class="form-group">
                    <label for="ingredient">Item:</label>
                    <input type="text" class="form-control" id="ingredient" placeholder="Enter Item Name">
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity:</label>
                    <input type="text" class="form-control" id="quantity" placeholder="Enter Quantity">
                </div>
                <button id="submit-ingredient">Add to your shopping list</button>
            </form>
        </div>
    </div>
</div>