<div class="container" id="logInForm">
	<h1>Fridge Friend</h1>
	<p id="signIn">Register your account or sign in to view your pantry items and search for recipes.</p>
	<div>
		<div class="container">
			<div class="d-flex justify-content-center h-100">
				<div class="card">
					<div class="card-header">
						<h3>Sign In</h3>
					</div>
					<form>
						<div class="form-group">
							<label for="exampleInputPhone1">Phone Number</label>
							<input type="phone" id="phone" class="form-control"
								aria-describedby="phoneHelp">
							<small id="phoneHelp" class="form-text text-muted">Enter your phone number with no spaces or symbols between numbers.</small>
						</div>
						<div class="form-group">
							<label for="exampleInputPassword1">Password</label>
							<input type="password" id="password" class="form-control">
						</div>
						<div class="form-group">
                        	<button type="submit" class="btn float-left login_btn" id="loginButton" name="loginButton">Login</button>
                    	</div>
						<div class="form-group">
                        	<button type="submit" class="btn float-right register_btn" id="registerButton" name="registerButton">Register</button>
                    	</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>